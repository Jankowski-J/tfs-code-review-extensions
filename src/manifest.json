{
	"name": "TFS Code Review Extensions",
	"description": "Improve your productivity with the set of extensions for the TFS Pull Requests interface.",
	"version": "0.0.2",
	"manifest_version": 2,
	"browser_action": {
		"default_icon": "images/icon-32.png",
		"default_title": "TFS Code Review Extensions",
		"default_popup": "popup/popup.html"
	},
	"icons": {
		"32": "images/icon-32.png",
		"48": "images/icon-48.png"
	},
	"permissions": [
		"http://*/*",
		"https://*/*",
		"storage",
		"webRequest",
		"activeTab",
		"<all_urls>"
	],
	"options_page": "options/options.html",
	"content_scripts": [
		{
			"css": [
				"content/styles.css"
			],
			"js": [
				"content/libs.js",
				"content/scripts.js"
			],
			"matches": [
				"http://*/tfs/*/pullrequest/*",
				"http://*/tfs/*/commit/*"
			],
			"run_at": "document_end"
		}
	],
	"web_accessible_resources": [
		"content/icon_dropdown.html"
	]
}
